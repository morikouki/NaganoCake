<div class="row">
	<h2>マイページ</h2>
	<h3>会員情報</h3>
	<%= link_to '編集する', edit_user_customer_path(@customer), class: 'btn btn-primary' %>
	<span class="btn btn-primary col-xs-offset-1">パスワード変更</span>

	<table class="table">
		<tr>
			<th>氏名</th>
			<td><%= @customer.last_name %>　<%= @customer.first_name %></td>
		</tr>
		<tr>
			<th>カナ</th>
			<td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
		</tr>
		<tr>
			<th>郵便番号</th>
			<td><%= @customer.post_code %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= @customer.address %></td>
		</tr>
		<tr>
			<th>電話番号</th>
			<td><%= @customer.phone_number %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= @customer.email %></td>
		</tr>
	</table>

	<p>
		配送先
		<%= link_to '登録', user_shippings_path, class: 'btn btn-primary' %>
	</p>
	<p>注文履歴</p>
</div>