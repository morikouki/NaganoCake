<div class="row">
	<h2>会員情報詳細</h2>
	<table>
		<tr>
			<th>顧客ID</th>
			<td><%= @customer.id %></td>
		</tr>
		<tr>
			<th>氏名</th>
			<td><%= @customer.last_name %><%= @customer.first_name %></td>
		</tr>
		<tr>
			<th>フリガナ</th>
			<td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
		</tr>
		<tr>
			<th>郵便番号</th>
			<td><%= @customer.post_code %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= @customer.address %></td>
		</tr>
		<tr>
			<th>電話番号</th>
			<td><%= @customer.phone_number %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= @customer.email %></td>
		</tr>
	</table>
</div>