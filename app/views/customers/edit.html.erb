<div class="row">
	<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
	<%= form_with model: @customer, url: customer_path(@customer) do |f| %>

		<div class="form-group">
			<%= f.label :id, '会員ID', class: 'col-xs-4' %>
			<%= @customer.id %>
		</div>

		<div class="form-group">
		  <%= f.label '名前', class: 'col-xs-4' %>
		  <%= f.text_field :last_name, autofocus: true %>
		  <%= f.text_field :first_name %>
		</div>

		<div class="form-group">
		  <%= f.label 'フリガナ', class: 'col-xs-4' %>
		  <%= f.text_field :last_name_kana %>
		  <%= f.text_field :first_name_kana %>
		</div>

		<div class="form-group">
		  <%= f.label :post_code, '郵便番号', class: 'col-xs-4' %>
		  <%= f.text_field :post_code %>
		</div>

		<div class="form-group">
		  <%= f.label :address, '住所', class: 'col-xs-4' %>
		  <%= f.text_field :address %>
		</div>

		<div class="form-group">
		  <%= f.label :phone_number, '電話番号（ハイフンなし）', class: 'col-xs-4' %>
		  <%= f.text_field :phone_number %>
		</div>

		<div class="form-group">
		  <%= f.label :email, 'メールアドレス', class: 'col-xs-4' %>
		  <%= f.email_field :email %>
		</div>

		<div class="form-group">
		  <%= f.label :is_deleted, '会員ステータス', class: 'col-xs-4' %>
		  <%= f.radio_button :is_deleted, false %>有効
		  <%= f.radio_button :is_deleted, true %>退会済
		</div>
		<%= f.submit '変更を保存する', class: 'btn btn-primary' %>
	<% end %>
</div>