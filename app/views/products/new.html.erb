<div class="row">
	<h2>商品登録</h2>
	<%= form_with model: @product, url: products_path do |f| %>
		<div class="col-xs-6">
			<div class='form-group'>
				<%= f.attachment_field :image, size: '50x50' %>
			</div>
		</div>
		<div class="col-xs-6">
			<div class='form-group'>
				<%= f.label :name, '商品名', class: 'col-xs-3' %>
				<%= f.text_field :name %>
			</div>
			<div class='form-group'>
				<%= f.label :explain, '商品説明', class: 'col-xs-3' %>
				<%= f.text_area :explain %>
			</div>
			<div class='form-group'>
				<%= f.label :genre_id, 'ジャンル', class: 'col-xs-3' %>
				<%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "選択してください"} %>
			</div>
			<div class='form-group'>
				<%= f.label :price, '税抜き価格', class: 'col-xs-3' %>
				<%= f.text_field :price %>
			</div>
			<div class='form-group'>
				<%= f.label :status, '販売ステータス', class: 'col-xs-3' %>
				<%= f.select :status, {"品切れ": false,"販売中": true} %>
			</div>
			<div class='form-group'>
				<%= f.submit '登録' %>
			</div>
		</div>
	<% end %>
</div>