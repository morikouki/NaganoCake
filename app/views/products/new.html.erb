<div class="row">
	<h2>商品登録</h2>
	<%= form_with model: @product, url: products_path do |f| %>
		<%= f.attachment_field :image, size: '50x50' %>
		<%= f.label :name, '商品名' %>
		<%= f.text_field :name %>
		<%= f.label :explain, '商品説明' %>
		<%= f.text_area :explain %>
		<%= f.label :genre_id, 'ジャンル' %>
		<%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "選択してください"} %>
		<%= f.label :price, '税抜き価格' %>
		<%= f.text_field :price %>
		<%= f.label :status, '販売ステータス' %>
		<%= f.select :status, {"品切れ": false,"販売中": true} %>
		<%= f.submit '登録' %>
	<% end %>
</div>