<div class="row">
	<h2>ジャンル一覧・追加</h2>
	<div class="genre-form-box">
		<%= form_with model: @genre, url: genres_path do |f| %>
			<%= f.label :name, 'ジャンル' %>
			<%= f.text_field :name %>
			<%= f.radio_button :is_active, :true, checked: true %>
			<%= f.label :status, '有効' %>
			<%= f.radio_button :is_active, :false %>
			<%= f.label :status, '無効' %>
			<%= f.submit '追加', class: 'btn btn-primary' %>
		<% end %>
	</div>

	<div class="genre-box">
		<table class="table">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
				<tr>
					<td>
						<%= genre.name %>
					</td>
					<td>
						<%= genre.is_active?? '有効' : '無効' %>
					</td>
					<td>
						<%= link_to '編集する', edit_genre_path(genre) %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>