<div class="row">
	<h2>ジャンル編集</h2>
	<%= form_with model: @genre, url: genre_path(@genre) do |f| %>
		<%= f.label :name, 'ジャンル' %>
		<%= f.text_field :name %>
		<%= f.radio_button :is_active, :true, checked: true %>
		<%= f.label :status, '有効' %>
		<%= f.radio_button :is_active, :false %>
		<%= f.label :status, '無効' %>
		<%= f.submit '変更を保存する', class: 'btn btn-primary' %>
	<% end %>
</div>